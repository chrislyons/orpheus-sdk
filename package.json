{
  "packageManager": "pnpm@8.15.4",
  "name": "orpheus-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo workspace for the Orpheus project.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "echo 'Workspace bootstrap complete.'",
    "prepare": "husky install || echo 'Husky not installed'",
    "build": "pnpm -r build",
    "lint": "pnpm run lint:js && pnpm run lint:cpp",
    "lint:js": "pnpm -r --if-present lint",
    "lint:cpp": "scripts/lint-cpp.sh",
    "format": "pnpm run format:js && pnpm run format:cpp",
    "format:js": "pnpm -r --if-present format:write",
    "format:cpp": "find src include -name '*.cpp' -o -name '*.h' -o -name '*.hpp' | xargs clang-format -i",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.2"
  },
  "pnpm": {
    "overrides": {
      "wait-on": "8.0.4",
      "@orama/orama": "3.0.0",
      "lru-cache": "10.4.3",
      "mermaid": "10.9.1",
      "marked": "9.1.6",
      "shadcn@3.3.1>commander": "11.1.0",
      "@ts-morph/common@0.27.0>minimatch": "9.0.5"
    },
    "patchedDependencies": {
      "shadcn@3.3.1": "patches/shadcn@3.3.1.patch"
    }
  }
}
