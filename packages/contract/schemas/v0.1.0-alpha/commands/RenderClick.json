{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orpheus-sdk.dev/schemas/v0.1.0-alpha/commands/RenderClick.json",
  "title": "RenderClick Command",
  "description": "Command to render a click track to WAV file",
  "type": "object",
  "required": ["type", "outputPath"],
  "properties": {
    "type": {
      "type": "string",
      "const": "RenderClick"
    },
    "outputPath": {
      "type": "string",
      "description": "Path for output WAV file",
      "minLength": 1
    },
    "bars": {
      "type": "integer",
      "description": "Number of bars to render (default: 2)",
      "minimum": 1,
      "maximum": 9999,
      "default": 2
    },
    "bpm": {
      "type": "number",
      "description": "Tempo in beats per minute (default: 120)",
      "minimum": 20,
      "maximum": 999,
      "default": 120
    },
    "id": {
      "type": "string",
      "description": "Optional command ID for request tracking",
      "pattern": "^[a-zA-Z0-9_-]+$"
    }
  },
  "additionalProperties": false
}
