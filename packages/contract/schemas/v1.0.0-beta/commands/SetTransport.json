{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orpheus.sdk/schemas/v1.0.0-beta/commands/SetTransport.json",
  "title": "SetTransport",
  "description": "Updates transport state (position, playing status)",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "SetTransport"
    },
    "position": {
      "type": "number",
      "description": "Transport position in samples",
      "minimum": 0
    },
    "playing": {
      "type": "boolean",
      "description": "Whether transport is playing"
    },
    "id": {
      "type": "string",
      "description": "Optional request ID for tracking"
    }
  },
  "required": ["type", "position", "playing"],
  "additionalProperties": false
}
