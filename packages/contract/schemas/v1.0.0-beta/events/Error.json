{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orpheus.sdk/schemas/v1.0.0-beta/events/Error.json",
  "title": "Error",
  "description": "Structured engine error",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Error"
    },
    "timestamp": {
      "type": "number",
      "description": "Event timestamp (milliseconds since epoch)"
    },
    "kind": {
      "type": "string",
      "enum": ["Validation", "Render", "Transport", "System"],
      "description": "Error category"
    },
    "code": {
      "type": "string",
      "description": "Error code (e.g., InvalidSession, OutOfRange)"
    },
    "message": {
      "type": "string",
      "description": "Human-readable error message"
    },
    "details": {
      "type": "object",
      "description": "Additional error context"
    },
    "sequenceId": {
      "type": "number",
      "description": "Monotonic sequence ID for ordering"
    }
  },
  "required": ["type", "timestamp", "kind", "code", "message"],
  "additionalProperties": false
}
