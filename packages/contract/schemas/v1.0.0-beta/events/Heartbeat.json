{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orpheus-sdk.dev/schemas/v0.1.0-alpha/events/Heartbeat.json",
  "title": "Heartbeat Event",
  "description": "Periodic heartbeat event to verify connection health",
  "type": "object",
  "required": ["type", "timestamp"],
  "properties": {
    "type": {
      "type": "string",
      "const": "Heartbeat"
    },
    "timestamp": {
      "type": "number",
      "description": "Unix timestamp in milliseconds",
      "minimum": 0
    },
    "uptime": {
      "type": "number",
      "description": "Driver uptime in seconds",
      "minimum": 0
    },
    "sequenceId": {
      "type": "integer",
      "description": "Monotonic sequence number for event ordering",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
