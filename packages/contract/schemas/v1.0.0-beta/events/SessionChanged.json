{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orpheus-sdk.dev/schemas/v0.1.0-alpha/events/SessionChanged.json",
  "title": "SessionChanged Event",
  "description": "Event emitted when session state changes",
  "type": "object",
  "required": ["type", "timestamp"],
  "properties": {
    "type": {
      "type": "string",
      "const": "SessionChanged"
    },
    "timestamp": {
      "type": "number",
      "description": "Unix timestamp in milliseconds",
      "minimum": 0
    },
    "sessionPath": {
      "type": "string",
      "description": "Path to loaded session file (if any)"
    },
    "trackCount": {
      "type": "integer",
      "description": "Number of tracks in session",
      "minimum": 0
    },
    "sequenceId": {
      "type": "integer",
      "description": "Monotonic sequence number for event ordering",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
