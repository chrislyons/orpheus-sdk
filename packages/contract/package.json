{
  "name": "@orpheus/contract",
  "version": "0.1.0-alpha.0",
  "description": "Orpheus SDK contract schemas for command/event communication between drivers and UI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./v1.0.0-beta": {
      "import": "./dist/v1.0.0-beta.js",
      "types": "./dist/v1.0.0-beta.d.ts"
    },
    "./schemas/*": "./schemas/*",
    "./manifest": "./MANIFEST.json"
  },
  "files": [
    "dist",
    "schemas",
    "MANIFEST.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format:check": "prettier --check 'src/**/*.ts' 'schemas/**/*.json'",
    "format:write": "prettier --write 'src/**/*.ts' 'schemas/**/*.json'",
    "validate:schemas": "node scripts/validate-schemas.js",
    "generate:manifest": "node scripts/generate-manifest.js"
  },
  "keywords": [
    "orpheus",
    "audio",
    "contract",
    "schema",
    "api"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.27",
    "ajv": "^8.12.0",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "typescript": "^5.5.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
